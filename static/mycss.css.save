.containerGrid {
    background-color: #FFF;
    color: #333;
    width: 100vw;
    height: 100vh;
    display: grid;
    grid-template-columns: 300px auto;
    grid-template-rows: auto;
}

.conatinermenu{
    box-shadow: 1px 1px 5px #333;
    border: 2px solid #FFF;
    width: 100%;
    padding: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.Containerconteudo{
    display: flex;
    justify-content: center;
}

.ContainerButton{
    display: flex;
    justify-content: center;
    align-items: center;
    align-self: center;
}

.ContainerButton button{
    margin: 0 20px;
}

.conteudoP{
    position: absolute;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 50px;
    text-align: justify;
}

.conteudoP .text-co{
    text-align: center;
    color: #FFF;
    font-size: 30px;
}

.conteudoP p{
    font-size: 18px;
    color: rgba(255, 255, 255, 0.829);
    text-shadow: 1px 1px 2px #222;
}
.conatinermenu_so {
    background-color: #333;
    box-shadow: 2px 5px 5px #111;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    border-left: 4px solid #333;
}.conatinermenu_so{
    background-color: rgb(64, 18, 128);
    box-shadow: 1px 1px 5px #333;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    border-left: 2px solid #333;
}

/* Button fixad no cato da ela */

.buttonfixed{
    width: 5em;
    position: fixed;
    /* margin-top: 20px; */
    margin-bottom: 20px;
    height: 50px;
    right: 0;
    left: 0;
    top: 0;
}

/* Menu perfil */

.menu_co {
    width: 100%;
    height: 100%;
    padding: 0px;
}
.menu_co .button-menu{
    width: 100%;
    background-color: #FFF;
    color: #333;
    text-align: left;
    padding: 20px 0;
    border-radius: 0px;
    font-weight: 600;
    padding: 12px;
    margin: 5px 0px;
    transition: 0.3s all;
}
.menu_co .button-menu:hover{
    border-left: 10px solid #333;
    padding: 15px 0px;
}
.logout{
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    bottom: 50px;
    width: 50%;
}
.logout .button-logout{
    position: absolute;
    width: 20%;
}

/* Cadastro de anotação */

.content_cadastro{
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* Css minha agenda */

.lo .space-caixa{
    width: 100%;
    display: flex;
    justify-content: center;
}

.lo .caixa{
    padding: 20px;
    flex-grow: 0 !important;
    margin: 20px !important;
}

/* Media query */

.calendario {
    width: 100%;
    height: auto;
    background-color: #333;
    padding: 10px 10px;
    color: #333;
}
.calendario .comentario{
    width: 100%;
    position: relative;
}
